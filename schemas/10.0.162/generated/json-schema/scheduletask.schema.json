{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "unifi-scheduletask.schema.json",
  "title": "UniFi scheduletask Configuration",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{24}$"
    },
    "name": {
      "type": "string"
    },
    "action": {
      "type": "string",
      "enum": {
        "values": [
          "accept",
          "drop",
          "reject"
        ],
        "collections": [
          "FirewallRule"
        ]
      }
    },
    "execute_only_once": {
      "type": "boolean",
      "enum": {
        "values": [
          "false",
          "true"
        ],
        "collections": [
          "ScheduleTask"
        ]
      }
    },
    "cron_expr": {
      "type": "string"
    },
    "timezone": {
      "type": "string"
    },
    "site_id": {
      "type": "string",
      "pattern": "^[0-9a-f]{24}$"
    }
  },
  "additionalProperties": true
}
